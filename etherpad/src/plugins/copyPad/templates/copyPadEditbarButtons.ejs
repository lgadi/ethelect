<%
  if (request.path.indexOf('/ep/pad/view') >= 0) {
    padId = request.path.split('/ep/pad/view/', 2)[1].split('/rev.', 2);
    padRev = padId[1];
    padId = padId[0];
  } else {
    padRev = 'latest';
    padId = request.path.split("/")[1];
  }
  params = ["old=" + padId];
  if (padRev != 'latest')
    params.push("old_rev=" + padRev);
  params = params.join('&');
%>
